<h1>Reservas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>RUT</th>
      <th>Email</th>
      <th>Estado</th>
      <th>Fecha y Hora</th>
    </tr>
  </thead>
  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.nombre %></td>
        <td><%= reserva.rut %></td>
        <td><%= reserva.email %></td>
        <td><%= reserva.estado %></td>
        <td><%= reserva.cita_disponible.fecha_hora %></td>
      </tr>
    <% end %>
  </tbody>
</table>
